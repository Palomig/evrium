<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evrium Notifier"
            android:textColor="#BB86FC"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пересылка уведомлений Сбербанка"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Проверка статуса..."
            android:textSize="16sp"
            android:padding="16dp"
            android:background="#1E1E1E"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/permissionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дать разрешение"
            android:backgroundTint="#BB86FC"
            android:textColor="#121212"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Webhook URL"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/webhookUrlEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://эвриум.рф/zarplata/api/incoming_payments.php"
            android:textColor="#E0E0E0"
            android:textColorHint="#666666"
            android:background="#1E1E1E"
            android:padding="16dp"
            android:inputType="textUri"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Token"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/tokenEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Токен из настроек сайта"
            android:textColor="#E0E0E0"
            android:textColorHint="#666666"
            android:background="#1E1E1E"
            android:padding="16dp"
            android:inputType="text"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить настройки"
            android:backgroundTint="#03DAC6"
            android:textColor="#121212"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тестовый запрос"
            android:backgroundTint="#333333"
            android:textColor="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Инструкция:"
            android:textColor="#BB86FC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Нажмите 'Дать разрешение'\n2. Найдите Evrium Notifier и включите\n3. Введите токен с сайта\n4. Нажмите 'Сохранить настройки'\n5. Проверьте тестовым запросом"
            android:textColor="#888888"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>
